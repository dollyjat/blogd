		"@types/eslint": "^9.6.0",
		"@types/pg": "^8.11.10",
		"autoprefixer": "^10.4.20",
		"drizzle-kit": "^0.27.0",
		"eslint": "^9.7.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
